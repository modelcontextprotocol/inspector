{
  "name": "mcp-auth-compat",
  "version": "1.0.0",
  "description": "MCP Authorization Compliance Checker",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "mcp-auth-compat": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/index.ts",
    "test-validation-server": "tsx src/test-validation-server.ts",
    "cli": "tsx src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "VERBOSE=true jest --verbose",
    "test:basic": "jest basic-compliance",
    "test:oauth": "jest oauth-compliance",
    "test:metadata": "jest metadata-location",
    "test:behavior": "jest client-behavior",
    "test:with-client": "CLIENT_COMMAND=\"$npm_config_client\" jest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^11.0.0",
    "express": "^4.18.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
