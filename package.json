{
  "name": "@modelcontextprotocol/inspector",
  "version": "0.20.0",
  "description": "Model Context Protocol inspector",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Model Context Protocol a Series of LF Projects, LLC.",
  "homepage": "https://modelcontextprotocol.io",
  "bugs": "https://github.com/modelcontextprotocol/inspector/issues",
  "type": "module",
  "bin": {
    "mcp-inspector": "cli/build/cli.js"
  },
  "files": [
    "web/bin",
    "web/dist",
    "cli/build",
    "tui/build"
  ],
  "workspaces": [
    "web",
    "cli",
    "tui",
    "core",
    "test"
  ],
  "scripts": {
    "build": "npm run build-core && npm run build-test && npm run build-web && npm run build-cli && npm run build-tui",
    "build-core": "cd core && npm run build",
    "build-web": "cd web && npm run build",
    "build-cli": "cd cli && npm run build",
    "build-tui": "cd tui && npm run build",
    "build-test": "cd test && npm run build",
    "server-composable": "node test/build/server-composable.js",
    "clean": "rimraf ./node_modules ./web/node_modules ./core/node_modules ./cli/node_modules ./tui/node_modules ./test/node_modules ./build ./web/dist ./cli/build ./tui/build ./test/build ./package-lock.json && npm install",
    "dev": "node web/bin/start.js --dev",
    "dev:windows": "node web/bin/start.js --dev",
    "dev:sdk": "npm run link:sdk && concurrently \"npm run dev\" \"cd sdk && npm run build:esm:w\"",
    "link:sdk": "(test -d sdk || ln -sf ${MCP_SDK:-$PWD/../typescript-sdk} sdk) && (cd sdk && npm link && (test -d node_modules || npm i)) && npm link @modelcontextprotocol/sdk",
    "unlink:sdk": "(cd sdk && npm unlink -g) && rm sdk && npm unlink @modelcontextprotocol/sdk",
    "start": "node web/bin/start.js",
    "web": "node cli/build/cli.js --web",
    "web:dev": "node cli/build/cli.js --web --dev",
    "test": "npm run prettier-check && vitest run",
    "test-cli": "cd cli && npm run test",
    "test-core": "cd core && npm run test",
    "test-web": "cd web && npm run test",
    "test:e2e": "MCP_AUTO_OPEN_ENABLED=false npm run test:e2e --workspace=web",
    "prettier-fix": "prettier --write .",
    "prettier-check": "prettier --check .",
    "lint": "prettier --check . && cd web && npm run lint",
    "prepare": "husky && npm run build",
    "publish-all": "npm publish --workspaces --access public && npm publish --access public",
    "update-version": "node scripts/update-version.js",
    "check-version": "node scripts/check-version-consistency.js"
  },
  "dependencies": {
    "@modelcontextprotocol/inspector-cli": "^0.20.0",
    "@modelcontextprotocol/inspector-web": "^0.20.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "concurrently": "^9.2.0",
    "hono": "^4.11.7",
    "node-fetch": "^3.3.2",
    "open": "^10.2.0",
    "shell-quote": "^1.8.3",
    "spawn-rx": "^5.1.2",
    "ts-node": "^10.9.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.17.0",
    "@types/shell-quote": "^1.7.5",
    "husky": "^9.1.7",
    "jest-fixed-jsdom": "^0.0.9",
    "lint-staged": "^16.1.5",
    "playwright": "^1.56.1",
    "prettier": "^3.7.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.4.2",
    "vitest": "^4.0.17"
  },
  "overrides": {
    "get-intrinsic": "1.3.0",
    "ink": "^5.2.1"
  },
  "engines": {
    "node": ">=22.7.5"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx,json,md}": [
      "prettier --write"
    ]
  }
}
